<% layout('layout', { title: 'Login - Medo Care', bodyClass: 'auth-page' }) %>

<section class="auth-section">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <h1>Welcome Back</h1>
        <p>Sign in to your Medo Care account</p>
      </div>
      
      <form class="auth-form" action="/login" method="POST">
        <div class="form-group">
          <label for="email">Email Address</label>
          <div class="input-group">
            <i class="fas fa-envelope"></i>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
          </div>
        </div>
        
        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-group">
            <i class="fas fa-lock"></i>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
            <button type="button" class="password-toggle"><i class="fas fa-eye"></i></button>
          </div>
        </div>
        
        <div class="form-options">
          <label class="checkbox-container">
            <input type="checkbox" id="remember" name="remember">
            <span class="checkmark"></span>
            Remember me
          </label>
          <a href="#forgot-password" class="forgot-link">Forgot password?</a>
        </div>
        
        <button type="submit" class="btn btn-primary btn-full">
          <i class="fas fa-sign-in-alt"></i> Sign In
        </button>
      </form>
      
      <div class="auth-divider"><span>or continue with</span></div>
      
      <div class="social-auth">
        <button class="btn btn-social btn-google"><i class="fab fa-google"></i> Google</button>
        <button class="btn btn-social btn-microsoft"><i class="fab fa-microsoft"></i> Microsoft</button>
      </div>
      
      <div class="auth-footer">
        <p>Don't have an account? <a href="/signup">Sign up</a></p>
      </div>
    </div>
    
    <div class="auth-illustration">
      <div class="illustration-content">
        <div class="floating-element element-1"><i class="fas fa-shield-alt"></i><span>Secure Login</span></div>
        <div class="floating-element element-2"><i class="fas fa-brain"></i><span>AI Powered</span></div>
        <div class="main-illustration"><i class="fas fa-user-md"></i></div>
      </div>
      <div class="illustration-text">
        <h2>Access Your Medical Reports</h2>
        <p>Sign in to view your AI-generated radiology reports and patient-friendly explanations</p>
      </div>
    </div>
  </div>
</section>
