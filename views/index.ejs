<% layout('layout', { title: 'Medo Care - AI-Powered Medical Imaging Analysis' }) %>

<section id="home" class="hero">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">
        Revolutionizing Medical Imaging with 
        <span class="gradient-text">AI Intelligence</span>
      </h1>
      <p class="hero-description">
        Transform your medical imaging workflow with our advanced AI platform. 
        Get instant, accurate radiology reports with patient-friendly explanations.
      </p>
      <div class="hero-buttons">
        <a href="/signup" class="btn btn-primary btn-large">
          <i class="fas fa-rocket"></i>
          Get Started Free
        </a>
        <a href="#demo" class="btn btn-outline btn-large">
          <i class="fas fa-play"></i>
          Watch Demo
        </a>
      </div>
      <div class="hero-stats">
        <div class="stat">
          <span class="stat-number">99.2%</span>
          <span class="stat-label">Accuracy Rate</span>
        </div>
        <div class="stat">
          <span class="stat-number">50K+</span>
          <span class="stat-label">Scans Analyzed</span>
        </div>
        <div class="stat">
          <span class="stat-number">24/7</span>
          <span class="stat-label">AI Support</span>
        </div>
      </div>
    </div>
    <div class="hero-image">
      <div class="image-container">
        <div class="floating-card card-1">
          <i class="fas fa-x-ray"></i>
          <span>X-Ray Analysis</span>
        </div>
        <div class="floating-card card-2">
          <i class="fas fa-brain"></i>
          <span>AI Report</span>
        </div>
        <div class="floating-card card-3">
          <i class="fas fa-user-md"></i>
          <span>Expert Review</span>
        </div>
        <div class="main-image">
          <i class="fas fa-lungs"></i>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="features" class="features">
  <div class="container">
    <div class="section-header">
      <h2>Powerful Features for Modern Healthcare</h2>
      <p>Everything you need for comprehensive medical imaging analysis</p>
    </div>

    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-upload"></i></div>
        <h3>Smart Image Upload</h3>
        <p>Support for X-rays, MRI, CT scans with automatic preprocessing and anonymization</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-robot"></i></div>
        <h3>AI Report Generation</h3>
        <p>Advanced medical imaging analysis with structured radiology reports</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-comments"></i></div>
        <h3>Patient-Friendly Explanations</h3>
        <p>AI translates complex medical jargon into simple, understandable language</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-comments"></i></div>
        <h3>Interactive Q&A Assistant</h3>
        <p>Get instant answers to your medical questions with our AI chatbot</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-chart-line"></i></div>
        <h3>Progress Tracking</h3>
        <p>Compare scans over time to track disease progression or improvement</p>
      </div>
      <div class="feature-card">
        <div class="feature-icon"><i class="fas fa-shield-alt"></i></div>
        <h3>Secure & Compliant</h3>
        <p>End-to-end encryption with HIPAA compliance and role-based access</p>
      </div>
    </div>
  </div>
</section>

<section id="demo" class="demo">
  <div class="container">
    <div class="section-header">
      <h2>See Medo Care in Action</h2>
      <p>Watch how our AI transforms medical imaging analysis</p>
    </div>
    <div class="demo-content">
      <div class="demo-video">
        <div class="video-placeholder">
          <i class="fas fa-play-circle"></i>
          <h3>AI Medical Imaging Analysis Demo</h3>
          <p>See how our platform analyzes X-rays and generates reports</p>
          <button class="btn btn-primary btn-large">
            <i class="fas fa-play"></i>
            Play Demo Video
          </button>
        </div>
      </div>
      <div class="demo-features">
        <div class="demo-feature">
          <i class="fas fa-upload"></i>
          <div>
            <h4>Upload & Process</h4>
            <p>Drag and drop medical images for instant analysis</p>
          </div>
        </div>
        <div class="demo-feature">
          <i class="fas fa-brain"></i>
          <div>
            <h4>AI Analysis</h4>
            <p>Advanced algorithms detect abnormalities and patterns</p>
          </div>
        </div>
        <div class="demo-feature">
          <i class="fas fa-file-medical"></i>
          <div>
            <h4>Generate Reports</h4>
            <p>Get comprehensive reports in seconds</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="how-it-works">
  <div class="container">
    <div class="section-header">
      <h2>How Medo Care Works</h2>
      <p>Simple steps to get your AI-powered medical reports</p>
    </div>
    <div class="steps-container">
      <div class="step">
        <div class="step-number">1</div>
        <div class="step-content">
          <h3>Upload Your Images</h3>
          <p>Upload X-rays, MRI, or CT scans in PNG, JPEG, or DICOM format</p>
        </div>
      </div>
      <div class="step">
        <div class="step-number">2</div>
        <div class="step-content">
          <h3>AI Analysis</h3>
          <p>Our advanced AI analyzes your images and generates comprehensive reports</p>
        </div>
      </div>
      <div class="step">
        <div class="step-number">3</div>
        <div class="step-content">
          <h3>Get Your Report</h3>
          <p>Receive detailed findings, impressions, and recommendations instantly</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="cta">
  <div class="container">
    <div class="cta-content">
      <h2>Ready to Transform Your Medical Imaging?</h2>
      <p>Join thousands of healthcare professionals using Medo Care</p>
      <div class="cta-buttons">
        <a href="/signup" class="btn btn-primary btn-large">Start Free Trial</a>
      </div>
    </div>
  </div>
</section>
