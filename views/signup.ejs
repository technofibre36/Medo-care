<% layout('layout', { title: 'Sign Up - Medo Care', bodyClass: 'auth-page' }) %>

<section class="auth-section">
  <div class="auth-container">
    <div class="auth-card">
      <div class="auth-header">
        <h1>Create Account</h1>
        <p>Join Medo Care and start analyzing medical images with AI</p>
      </div>

      <form class="auth-form" action="/signup" method="POST">
        <div class="form-row">
          <div class="form-group">
            <label for="firstName">First Name</label>
            <div class="input-group">
              <i class="fas fa-user"></i>
              <input type="text" id="firstName" name="firstName" placeholder="First name" value="<%= firstName %>" required>
            </div>
          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <div class="input-group">
              <i class="fas fa-user"></i>
              <input type="text" id="lastName" name="lastName" placeholder="Last name" value="<%= lastName %>" required>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="email">Email Address</label>
          <div class="input-group">
            <i class="fas fa-envelope"></i>
            <input type="email" id="email" name="email" placeholder="Enter your email" value="<%= email %>" required>
          </div>
        </div>

        <div class="form-group">
          <label for="userType">I am a</label>
          <div class="input-group">
            <i class="fas fa-user-md"></i>
            <select id="userType" name="userType" required>
              <option value="">Select your role</option>
              <option value="doctor" <%= userType==='doctor'?'selected':'' %>>Medical Doctor</option>
              <option value="radiologist" <%= userType==='radiologist'?'selected':'' %>>Radiologist</option>
              <option value="researcher" <%= userType==='researcher'?'selected':'' %>>Medical Researcher</option>
              <option value="student" <%= userType==='student'?'selected':'' %>>Medical Student</option>
              <option value="patient" <%= userType==='patient'?'selected':'' %>>Patient</option>
              <option value="other" <%= userType==='other'?'selected':'' %>>Other Healthcare Professional</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <div class="input-group">
            <i class="fas fa-lock"></i>
            <input type="password" id="password" name="password" placeholder="Create a password" required>
            <button type="button" class="password-toggle"><i class="fas fa-eye"></i></button>
          </div>
          <div class="password-strength">
            <div class="strength-bar"><div class="strength-fill"></div></div>
            <span class="strength-text">Password strength</span>
          </div>
        </div>

        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <div class="input-group">
            <i class="fas fa-lock"></i>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
          </div>
        </div>

        <div class="form-options">
          <label class="checkbox-container">
            <input type="checkbox" id="terms" name="terms" required>
            <span class="checkmark"></span>
            I agree to the <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a>
          </label>
          <label class="checkbox-container">
            <input type="checkbox" id="newsletter" name="newsletter">
            <span class="checkmark"></span>
            Send me updates about new features and medical AI advancements
          </label>
        </div>

        <button type="submit" class="btn btn-primary btn-full">
          <i class="fas fa-user-plus"></i> Create Account
        </button>
      </form>

      <div class="auth-divider"><span>or sign up with</span></div>

      <div class="social-auth">
        <button class="btn btn-social btn-google"><i class="fab fa-google"></i> Google</button>
        <button class="btn btn-social btn-microsoft"><i class="fab fa-microsoft"></i> Microsoft</button>
      </div>

      <div class="auth-footer">
        <p>Already have an account? <a href="/login">Sign in</a></p>
      </div>
    </div>

    <div class="auth-illustration">
      <div class="illustration-content">
        <div class="floating-element element-1"><i class="fas fa-rocket"></i><span>Get Started</span></div>
        <div class="floating-element element-2"><i class="fas fa-chart-line"></i><span>Track Progress</span></div>
        <div class="main-illustration"><i class="fas fa-brain"></i></div>
      </div>
      <div class="illustration-text">
        <h2>Start Your AI Journey</h2>
        <p>Join thousands of healthcare professionals using AI to improve patient care and diagnostic accuracy</p>
        <div class="benefits-list">
          <div class="benefit"><i class="fas fa-check"></i><span>Free trial with 10 scans</span></div>
          <div class="benefit"><i class="fas fa-check"></i><span>Instant AI reports</span></div>
          <div class="benefit"><i class="fas fa-check"></i><span>Patient-friendly explanations</span></div>
          <div class="benefit"><i class="fas fa-check"></i><span>Secure & HIPAA compliant</span></div>
        </div>
      </div>
    </div>
  </div>
</section>
